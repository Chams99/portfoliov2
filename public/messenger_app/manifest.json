{
  "name": "Chamsado Messenger",
  "short_name": "Chamsado",
  "description": "Secure, real-time messaging built with Flutter and Firebase. Connect with friends and family seamlessly.",
  "start_url": "/messenger_app/",
  "display": "standalone",
  "background_color": "#3C4038",
  "theme_color": "#B06B4F",
  "orientation": "portrait-primary",
  "categories": ["social", "communication"],
  "icons": [
    {
      "src": "images/logo.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "images/logo.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "images/loginpage.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Login Screen"
    },
    {
      "src": "images/lightmode.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Light Mode Interface"
    },
    {
      "src": "images/darkmode.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dark Mode Interface"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },
  "shortcuts": [
    {
      "name": "New Message",
      "short_name": "New",
      "description": "Start a new conversation",
      "url": "/messenger_app/#new",
      "icons": [{ "src": "images/logo.png", "sizes": "96x96" }]
    }
  ]
}
